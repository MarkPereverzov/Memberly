# Конфигурация бота-приглашающего
# Скопируйте этот файл в .env и заполните своими данными

# Токен бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID администраторов (через запятую)
ADMIN_USER_IDS=123456789,987654321

# ID пользователей в белом списке (через запятую)
WHITELIST_USER_IDS=123456789,987654321,555666777

# Кулдаун между приглашениями (в секундах)
INVITE_COOLDOWN_SECONDS=300

# Кулдаун между приглашениями в разные группы (в секундах)
GROUP_COOLDOWN_SECONDS=60

# Максимум приглашений в день на пользователя
MAX_INVITES_PER_DAY=50